# Environment Variables Template
# Copy this file to .env and fill in your specific values
# DO NOT commit the .env file to version control!

# =============================================================================
# PROJECT CONFIGURATION
# =============================================================================

# Project Information
PROJECT_NAME="CODSOFT-Titanic-Survival-Prediction"
PROJECT_VERSION="1.0.0"
AUTHOR_NAME="Your Name Here"
AUTHOR_EMAIL="your.email@example.com"

# =============================================================================
# DATA PATHS
# =============================================================================

# Data directory paths
DATA_PATH="./data"
RAW_DATA_PATH="./data/raw"
PROCESSED_DATA_PATH="./data/processed"
DATASET_FILE="Titanic-Dataset.csv"

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# Model storage paths
MODEL_PATH="./models"
RESULTS_PATH="./results"
FIGURES_PATH="./results/figures"
REPORTS_PATH="./results/reports"

# Model training parameters
RANDOM_STATE=42
TEST_SIZE=0.2
CV_FOLDS=5

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================

# Logging configuration
LOG_LEVEL="INFO"
LOG_FILE="titanic_prediction.log"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# =============================================================================
# VISUALIZATION SETTINGS
# =============================================================================

# Plot settings
PLOT_DPI=300
PLOT_FORMAT="png"
FIGURE_SIZE_WIDTH=12
FIGURE_SIZE_HEIGHT=8

# =============================================================================
# API SETTINGS (if deploying as web service)
# =============================================================================

# Flask/FastAPI settings
FLASK_ENV="development"
FLASK_DEBUG="True"
API_HOST="127.0.0.1"
API_PORT=5000

# =============================================================================
# DATABASE SETTINGS (if using database)
# =============================================================================

# Database connection (uncomment and modify if needed)
# DATABASE_URL="sqlite:///titanic_predictions.db"
# DB_HOST="localhost"
# DB_PORT=5432
# DB_NAME="titanic_db"
# DB_USER="your_username"
# DB_PASSWORD="your_password"

# =============================================================================
# CLOUD STORAGE (if using cloud services)
# =============================================================================

# AWS S3 (uncomment if using AWS)
# AWS_ACCESS_KEY_ID="your_access_key"
# AWS_SECRET_ACCESS_KEY="your_secret_key"
# AWS_BUCKET_NAME="your-bucket-name"
# AWS_REGION="us-east-1"

# Google Cloud (uncomment if using GCP)
# GOOGLE_APPLICATION_CREDENTIALS="path/to/service-account-key.json"
# GCP_PROJECT_ID="your-project-id"
# GCP_BUCKET_NAME="your-bucket-name"

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Email notifications (uncomment if needed)
# SMTP_SERVER="smtp.gmail.com"
# SMTP_PORT=587
# EMAIL_USER="your.email@gmail.com"
# EMAIL_PASSWORD="your_app_password"

# Slack notifications (uncomment if needed)
# SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK"

# =============================================================================
# PERFORMANCE AND OPTIMIZATION
# =============================================================================

# CPU and memory settings
MAX_WORKERS=4
MEMORY_LIMIT="2GB"
ENABLE_GPU="False"

# Model performance thresholds
MIN_ACCURACY=0.75
MIN_PRECISION=0.70
MIN_RECALL=0.70
MIN_F1_SCORE=0.70

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development mode settings
DEBUG_MODE="True"
VERBOSE_LOGGING="True"
SAVE_INTERMEDIATE_RESULTS="True"

# Testing settings
RUN_TESTS="True"
TEST_DATA_SIZE=100

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================

# Production settings (uncomment for production deployment)
# PRODUCTION_MODE="False"
# USE_HTTPS="False"
# DOMAIN_NAME="yourdomain.com"

# Docker settings (uncomment if using Docker)
# DOCKER_IMAGE_NAME="titanic-predictor"
# DOCKER_TAG="latest"
# DOCKER_PORT=8000

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Security keys (generate secure random keys for production)
SECRET_KEY="your-secret-key-change-this-in-production"
API_KEY="your-api-key"

# CORS settings (if deploying API)
ALLOWED_ORIGINS="http://localhost:3000,http://127.0.0.1:3000"

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# MLflow tracking (uncomment if using MLflow)
# MLFLOW_TRACKING_URI="http://localhost:5000"
# MLFLOW_EXPERIMENT_NAME="titanic-survival-prediction"

# Weights & Biases (uncomment if using W&B)
# WANDB_PROJECT="titanic-survival-prediction"
# WANDB_ENTITY="your-wandb-username"

# =============================================================================
# CUSTOM SETTINGS
# =============================================================================

# Add any custom environment variables specific to your setup below
# CUSTOM_SETTING_1="value1"
# CUSTOM_SETTING_2="value2"